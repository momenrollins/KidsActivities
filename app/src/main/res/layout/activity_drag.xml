<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DragActivity">

    <VideoView
        android:id="@+id/VideoView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/boardback"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/boardImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="85dp"
            android:layout_weight="4"

            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/boardItemsImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="4"
            app:srcCompat="@drawable/board_with_items" />

    </LinearLayout>


    <ImageView
        android:id="@+id/shape1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shape1" />

    <ImageView
        android:id="@+id/shape2"
        android:layout_width="55dp"
        android:visibility="gone"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:src="@drawable/shape2" />

    <ImageView
        android:id="@+id/shape3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginEnd="40dp"
        android:src="@drawable/shape3" />
</RelativeLayout>